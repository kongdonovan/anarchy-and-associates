{
  "name": "anarchy-and-associates",
  "version": "1.0.0",
  "description": "A comprehensive Discord bot for managing legal firm operations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/dev-server.ts",
    "dev:hot": "ts-node-dev --respawn --transpile-only src/dev-server.ts --hot",
    "clear-commands": "ts-node src/scripts/clear-commands.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:clean": "rm -rf docs/generated"
  },
  "keywords": [
    "discord",
    "bot",
    "legal",
    "management",
    "typescript"
  ],
  "author": "Anarchy & Associates",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@discordx/importer": "^1.3.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "discord.js": "^14.14.1",
    "discordx": "^11.12.4",
    "dotenv": "^16.3.1",
    "glob": "^11.0.3",
    "mongodb": "^6.3.0",
    "noblox.js": "^4.15.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "node-watch": "^0.7.4",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "typedoc": "^0.28.6",
    "typedoc-plugin-markdown": "^4.7.0",
    "typedoc-plugin-merge-modules": "^7.0.0"
  }
}
